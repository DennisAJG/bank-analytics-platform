{
  "title": "API Overview - Bank Analytics",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "RPS (All)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 5 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "stat",
      "title": "5xx RPS",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 5 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "type": "stat",
      "title": "p95 Latency (s)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 5 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests by Path (RPS)",
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "sum by (path) (rate(http_requests_total[5m]))",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 by Path (s)",
      "gridPos": { "x": 0, "y": 13, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, path) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{path}}"
        }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
